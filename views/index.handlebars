{{!-- for each article post this --}}

{{#each articles}}
  <div class="card my-5" style="border: none;">
    <div class="card-header text-center text-black mx-5" style="background-color: transparent; border-bottom: 1px solid rgb(105, 105, 105)">
    </div>
    <div class="card-body">
      <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-6">
          <h4 style="font-family: 'Marcellus SC', serif;">{{this.title}}</h4>
          <br>
          <a style="font-family: Georgia, serif;">{{this.summary}}</a>
          <br>
          <a href="{{this.link}}" id="read-article" style="font-family: 'Marcellus SC', serif;" target="_blank">read more...</a>
          
        </div>
        <div class="col-5 card-img mt-1" alt="Card image">
          <img src="{{this.image}}" id="articleImage">
        </div>
      </div>
      <div class="row mt-1">
        <div class="col-1"></div>
        <div class="col-3">
          <h6 class="pt-3 pl-3" style="font-family: 'Marcellus SC', serif;">Current Comments:</h6>
        </div>
        <div class="col-5">
          {{!-- comments here --}}
          {{#if articles.note}} 
            {{#each articles.note}}
              <p>{{body}}</p>
            {{/each}}
          {{else}}
          <p class="mt-3" style="font-family: 'Marcellus SC', serif;">No comments have been made yet. Feel free to leave one.</p>
          {{/if}}
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-7">
        <button type="button" class="btn btn-outline-dark mr-4" id="save-article" style="font-family: 'Marcellus SC', serif; float: right;" data-id="{{this._id}}"><strong>Save Article</strong></button>
      </div>
      </div>
    </div>
  </div>
  {{/each}}
  
  <br>

<div class="modal" tabindex="-1" role="dialog" id="comment-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Make a Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="comment-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <form action="/comment/{{articles._id}}" method="POST"></form>
          <div class="modal-body">
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Type your Comment Here</label>
              <textarea class="form-control" id="comment-input" rows="2"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="save-comment">Save Comment</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>